@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeFormModel;


@*Form that is connected to the model through the controller*@
<div style="padding: 25px 50px 75px 100px;">
    <h2>413 Grade Calculator</h2>
    <div class="row">
        <form method="post" id="gradeCalculator">
            <label>Assignments</label>
            <input type="number" id="assignments" asp-for="Assignments"/>
            <br />
            <label>Group Projects</label>
            <input type="number" id="groupProjects" asp-for="Group_Projects"/>
            <br />
            <label>Quizzes</label>
            <input type="number" id="Quizzes" asp-for="Quizzes"/>
            <br />
            <label>Exams</label>
            <input type="number" id="Exames" asp-for="Exames"/>
            <br />
            <label>INTEX</label>
            <input type="number" id="INTEX" asp-for="INTEX" />
            <br />
            <input id="btnsend" type="submit" value="Check Score" />

            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
