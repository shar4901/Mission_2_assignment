@model FanMailModel;

<h2>413 Grade Calculator</h2>
<div>
    <form method="post" id="gradeCalculator">
        <label>Assignments</label>
        <input type="number" id="assignments" asp-for="Assignments" min="0" max="100" />
        <br />
        <label>Group Projects</label>
        <input type="number" id="groupProjects" asp-for="Group_Projects" min="0" max="100" />
        <br />
        <label>Quizzes</label>
        <input type="number" id="Quizzes" asp-for="Quizzes" min="0" max="100" />
        <br />
        <label>Exams</label>
        <input type="number" id="Exames" asp-for="Exames" min="0" max="100" />
        <br />
        <label>INTEX</label>
        <input type="number" id="INTEX" asp-for="INTEX" min="0" max="100" />
        <br />
        <input id="btnsend" type="button" value="Check Score" />

        <div asp-validation-summary="All"></div>
    </form>
</div>
